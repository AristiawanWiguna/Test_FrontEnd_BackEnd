@{
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group">
        <label for="inputData">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Username">
    </div>
    <br />
    <div class="form-group">
        <label for="inputData">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
    <br/>
    @if (ViewData["ValidateMessage"] != null)
    {
        <div>
            <label style="color:red">@ViewData["ValidateMessage"]</label>
        </div>
        <br />
    }
    <button type="submit" class="btn btn-primary">Submit</button>

    

</form>
